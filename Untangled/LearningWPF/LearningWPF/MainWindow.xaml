        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cc="clr-namespace:CardControlLibrary;assembly=CardControlLibrary"
        Title="MainWindow" Height="500" Width="500">
    <Grid>
        <StackPanel>
            <cc:AwesomeCard x:Name="card1" Height="90" Width="460" HorizontalAlignment="Left" VerticalAlignment="Top">
            </cc:AwesomeCard>
            
            <cc:AwesomeCard x:Name="card2" Height="90" Width="460" HorizontalAlignment="Left" VerticalAlignment="Top">
            </cc:AwesomeCard>
            <Button Margin="0,20,0,0" Content="Change data" Click="Button_Click"/>
